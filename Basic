package com.rfp200batchjava;
import java.util.Scanner;

public class Test {
	
	public void Rectangle() {
        Scanner sc = new Scanner(System.in);
        System.out.println("Enter the length");
        int a = sc.nextInt();
        System.out.println("Enter the weigth");
        int b = sc.nextInt();
        int area;
        area = 2 * (a + b);
        System.out.println("Rectangle of area = " + area);

    }

    public void Circle() {
        int r;
        double pi = 3.14, area;
        Scanner sc = new Scanner(System.in);
        System.out.println("Enter radius");
        r = sc.nextInt();
        area = pi * r * r;
        System.out.println("area of circle = " + area);

    }

    public void Trinagle() {
        Scanner sc = new Scanner(System.in);
        float =b, h, area;
        System.out.println("Enter breath");
        b = sc.nextFloat();
        System.out.println("Enter hight");
        h = sc.nextFloat();
        area = b * h / 2;
        System.out.println("area of Trinagle = " + area);

    }

    public static void main(String[] args) {
        Test t1 = new Test();
        t1.Rectangle();
        t1.Circle();
        t1.Trinagle();
    }
}
